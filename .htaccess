# Protecci√≥n de archivos
<Files ".htaccess">
    Order Allow,Deny
    Deny from all
</Files>

# Prevenir listado de directorios
Options -Indexes

# Proteger archivos sensibles
<FilesMatch "\.(sql|log|md|json|lock)$">
    Order Allow,Deny
    Deny from all
</FilesMatch>

# Habilitar rewrite (para futuras rutas limpias)
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /APP3/
</IfModule>
